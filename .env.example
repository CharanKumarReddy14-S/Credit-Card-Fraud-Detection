# Credit Card Fraud Detection - Environment Variables
# Copy this file to .env and configure your settings

# ========================================
# Model Configuration
# ========================================
MODEL_PATH=./models
BEST_MODEL_NAME=best_model.pkl
PREPROCESSOR_PATH=./models/preprocessor.pkl

# ========================================
# API Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=4

# ========================================
# Streamlit Configuration
# ========================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=True

# ========================================
# Data Configuration
# ========================================
DATA_PATH=./data/creditcard.csv
PROCESSED_DATA_PATH=./data/processed

# ========================================
# Training Configuration
# ========================================
RANDOM_STATE=42
TEST_SIZE=0.2
VAL_SIZE=0.1
SMOTE_SAMPLING_STRATEGY=0.5

# ========================================
# Model Hyperparameters
# ========================================

# XGBoost
XGBOOST_N_ESTIMATORS=200
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1
XGBOOST_SUBSAMPLE=0.8

# Random Forest
RF_N_ESTIMATORS=100
RF_MAX_DEPTH=20
RF_MIN_SAMPLES_SPLIT=10

# Neural Network
NN_EPOCHS=100
NN_BATCH_SIZE=256
NN_LEARNING_RATE=0.001
NN_PATIENCE=10

# ========================================
# Prediction Configuration
# ========================================
FRAUD_THRESHOLD=0.5
CONFIDENCE_THRESHOLD=0.7

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ========================================
# Security (For Production)
# ========================================
API_KEY=your-secret-api-key-here
ENABLE_CORS=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# ========================================
# Database (Optional - for storing predictions)
# ========================================
DATABASE_URL=postgresql://user:password@localhost/fraud_detection
ENABLE_DATABASE=False

# ========================================
# Cloud Storage (Optional)
# ========================================
USE_CLOUD_STORAGE=False
AWS_S3_BUCKET=fraud-detection-models
AWS_REGION=us-east-1
AZURE_STORAGE_CONNECTION_STRING=your-connection-string

# ========================================
# Monitoring (Optional)
# ========================================
ENABLE_MONITORING=False
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ========================================
# Feature Flags
# ========================================
ENABLE_MODEL_EXPLAINABILITY=False
ENABLE_BATCH_PROCESSING=True
ENABLE_REAL_TIME_MONITORING=False